}

<div class="site-wrapper-reveal">
    <!--============ Machine learning Hero Start ============-->
    <div class="breadcrumb-area" style="background:url(/assets/images/slidebg3.jpg) no-repeat top; background-size:cover; z-index:2">
        <div class="slider-mask">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_box text-center">
                      
                        <h1 class="breadcrumb-title">Contact Us</h1>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <!--============ Infotechno Hero End ============-->
    
    

    <!--====================  brand logo slider area ====================-->
    <div class="contact-us-section-wrappaer section-space--ptb_70 ">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="contact-us-wrap-one mb-30 text-center">
                        <h3 class="heading">
                            To make requests for further information, <br>
                            <span class="text-body">contact us</span> via our social channels.
                        </h3>
                        <p class="sub-heading">
                            We usually respond within a few hours! <br>
                            No more than <strong>2 working days</strong> after receiving your inquiry.
                        </p>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-5 mb-4 mb-lg-0">
                    <div class="contact-info-wrap bg-light h-100 rounded-3 p-lg-5 p-4 shadow-sm">
                        <h5 class="heading mb-3">Address</h5>
                        <p class="fs-5 mb-4">Bengaluru, India</p>
                        <hr />
                        <ul class="contact-info__list list-unstyled mt-3">
                            <li class="mb-2">
                                <a href="mailto:ilmacademy20@gmail.com" class="fs-5 fw-bold text-dark text-decoration-none">
                                    <i class="fa-regular fa-envelope-open me-2"></i> ilmacademy20@gmail.com
                                </a>
                            </li>
                            <li>
                                <a href="tel:+91-9901296403" class="fs-5 fw-semibold text-dark text-decoration-none">
                                    <i class="fa-solid fa-phone me-2"></i> +91-99012 96403
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-lg-7">
                    <div class="contact-form-wrap bg-light h-100 rounded-3 p-lg-5 p-4 shadow-sm">
                        <h5 class="heading mb-3">Send us a Message</h5>
                        <form id="contact-form" action="#" method="post" novalidate>
                            <div class="contact-form">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <input class="form-control" name="con_name" type="text" placeholder="Name *" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="form-control" name="con_email" type="email" placeholder="Email *" required>
                                    </div>
                                    <div class="col-12">
                                        <input class="form-control" name="con_subject" type="text" placeholder="Subject *" required>
                                    </div>
                                    <div class="col-12">
                                        <textarea class="form-control" name="con_message" rows="5" placeholder="Please describe what you need." required></textarea>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <button class="ht-btn ht-btn-md w-100" type="submit">Submit</button>
                                        <p class="form-message mt-2"></p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>