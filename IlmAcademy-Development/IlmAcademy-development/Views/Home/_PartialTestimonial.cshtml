@using IlmAcademy.ViewModels
@model PagesViewModel

<div class="feature-large-images-wrapper section-space--ptb_70 " style="background:url(/assets/images/bg5.jpg)">
    <div class="container">
        <div class="cybersecurity-about-box">
            <div class="row align-items-center">
                <div class="col-lg-12 m-auto">
                    <!-- Section Title -->
                    <div class="section-title-wrap text-center section-space--mb_30">
                        <h6 class="section-sub-title mb-20">
                            @Model.ContentTypeSlug?.ContentTitle
                        </h6>
                        <h3 class="heading mb-20">
                            @Html.Raw(Model.ContentTypeSlug?.CustomFields?.FirstOrDefault(x => x.Description == "Short Description")?.Value)

                        </h3>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="col-lg-4 col-7 m-auto">
                    <div class="modern-number-01">
                        <img src="/assets/images/gallery/banner.jpeg" class="img-fluid rounded" alt="Student Testimonials" />
                    </div>
                </div>

                <div class="col-lg-7 offset-lg-1">
                    <div class="conact-us-wrap-one managed-it">
                        <div class="testimonial-slider">
                            <div class="swiper-container testimonial-slider__container">
                                <div class="swiper-wrapper testimonial-slider__wrapper">


                                    @foreach(var i in Model.ContentTypeSlug?.ChildContent)
                                    {
                                        <div class="swiper-slide">
                                            <div class="testimonial-slider__one wow move-up">
                                                <div class="testimonial-slider--info">
                                                    <div class="testimonial-slider__author">
                                                        <div class="testimonial-rating">
                                                            <span class="fa fa-star"></span>
                                                            <span class="fa fa-star"></span>
                                                            <span class="fa fa-star"></span>
                                                            <span class="fa fa-star"></span>
                                                            <span class="fa fa-star"></span>
                                                        </div>
                                                        <div class="author-info">
                                                            <h6 class="name">@i.ContentTitle</h6>
                                                        </div>
                                                    </div>
                                                </div>

                                                <blockquote class="testimonial-slider__text">
                                                    @i.Description
                                                </blockquote>

                                                <span class="designation">
@i.ShortDescription
</span>
                                            </div>
                                        </div>
                                    }
                                

                                </div>

                                <div class="swiper-pagination swiper-pagination-t01 section-space--mt_30"></div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>



</div>
<script src="/assets/js/vendor/modernizr-2.8.3.min.js"></script>

<!-- jQuery JS -->
<script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>
<script src="/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>

<!-- Bootstrap JS -->
<script src="/assets/js/vendor/bootstrap.min.js"></script>

<!-- Plugins JS (Please remove the comment from below plugins.min.js for better website load performance and remove plugin js files from avobe) -->

<script src="/assets/js/plugins/plugins.min.js"></script>

<!-- Main JS -->
<script src="/assets/js/main.js"></script>


