@using IlmAcademy.ViewModels
@model PagesViewModel
<div class="section-space--pb_70 py-5" style="background:linear-gradient(to right, #0070F4, #0055A5)">
    <div class="container">
        <div class="row ">

            <div class="col-lg-10 m-auto mt-4">
                <div class="section-title-wrap text-center section-space--mb_30 text-white">
                    <h6 class="section-sub-title mb-20 text-white">
                        @Model.ContentTypeSlug?.ContentTitle
                    </h6>

                    <h2 class="heading text-white mb-4">
                        @Html.Raw(Model.ContentTypeSlug?.CustomFields.FirstOrDefault(x => x.Description == "Short Description")?.Value)
                       
                    </h2>
                    <p class="text-white fs-6 mb-4">
                        @Html.Raw(Model.ContentTypeSlug?.CustomFields.FirstOrDefault(x => x.Description == "Long Description")?.Value)

                    </p>
                    <a href="/courses" class="ht-btn ht-btn-md ht-btn--outline outline-white fs-6">
                        Browse All Courses
                    </a>
                </div>
            </div>


        </div>
    </div>
</div>

