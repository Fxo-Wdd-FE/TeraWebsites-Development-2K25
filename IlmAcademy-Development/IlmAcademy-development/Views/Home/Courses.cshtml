    <section class="pt-lg-5 pb-lg-5 pt-4 pb-4" style="background:url(/assets/images/bg5.jpg) no-repeat; background-size:cover">
        <div class="container mt-lg-4 mb-lg-4">
            <div class="row g-4">
                @foreach (var i in Model.Courses)
                {
                    <div class="col-lg-4">
                        <div class="single-blog-item blog-grid bg-white shadow">
                            <div class="post-feature blog-thumbnail responsive-images62">
                                <a href="/course-details/@i.ActivityCourseId">
                                    @if (i.Image != null && i.Image.Length > 0)
                                    {
                                        var base64 = "data:image/png;base64," + Convert.ToBase64String(i.Image);
                                        <img class="img-fluid" src="@base64" alt="@i.Title" />
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="/assets/images/english-diploma.png" alt="Default Course Image" />
                                    }
                                </a>
                            </div>
                            <div class="post-info lg-blog-post-info p-4">
                                <h2 class="post-title font-weight--bold fs-4">
                                    <a href="/course-details/@i.ActivityCourseId">@i.Title</a>
                                </h2>
                                <div class="post-excerpt mt-0 text-truncate-2">
                                    @Html.Raw(i.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                }

               
