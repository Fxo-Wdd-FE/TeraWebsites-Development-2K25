@using IlmAcademy.ViewModels
@model PagesViewModel


<div class="site-wrapper-reveal">


    <div class="breadcrumb-area" style="background:url(@PagesViewModel.ContentUrl/@Model.ContentTypeSlug?.PageHeaderPhoto) no-repeat top; background-size:cover; z-index:2">
        <div class="slider-mask"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="about-banner-content text-center">
                        <h1 class="mb-15 text-white">
                            @Html.Raw(Model.ContentTypeSlug.CustomFields.FirstOrDefault(x => x.Description == "Title")?.Value)
                        </h1>
                        <p class="text-white">
                            @Html.Raw(Model.ContentTypeSlug.CustomFields?.FirstOrDefault(x => x.Description == "Short Description")?.Value)
                        </p>
                        <div class="mt-4">
                            <a href="#fees" class="ht-btn ht-btn-md">View Fees</a>
                            <a href="/apply-online" class="ht-btn ht-btn-md">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <section class="pt-lg-5 pb-lg-5 pt-4 pb-4 bg-light-subtle">
        <div class="container">
            <div class="row">
                <!-- Left Content -->
                <div class="col-lg-8 pe-lg-5">
                    @Html.Raw(Model.ContentTypeSlug?.Description)



                    <hr class="my-4">
                    @Html.Raw(Model.ContentTypeSlug?.OtherDescription)


                </div>

                <!-- Right Form -->
                <div class="col-lg-4 ms-auto d-none d-lg-block">
                    <div class="business-solution-form-wrap me-auto ms-auto rounded-0 pt-4 pb-4 rounded-4 bg-white shadow-sm">
                        <div class="contact-title text-center mb-3">
                            <h5 class="mb-2">Apply Today</h5>
                            <p class="text">Fill in your details to begin your journey</p>
                        </div>
                        <form id="admissions-form" action="#" method="post">
                            <div class="contact-form__two">
                                <!-- Name -->
                                <div class="contact-inner">
                                    <input name="con_name" type="text" placeholder="Name *" required>
                                </div>

                                <!-- Email -->
                                <div class="contact-inner">
                                    <input name="con_email" type="email" placeholder="Email *" required>
                                </div>

                                <!-- Country -->
                                <div class="contact-inner">
                                    <input name="con_country" type="text" placeholder="Country *" required>
                                </div>

                                <!-- Course Dropdown -->
                                <div class="contact-select">
                                    <div class="form-item contact-inner">
                                        <span class="inquiry">
                                            <select name="course" required>
                                                <option disabled selected>Select Course</option>
                                                <option value="Spoken English">Spoken English</option>
                                                <option value="IELTS Training">IELTS Training</option>
                                                <option value="Diploma (3 Months)">Diploma (3 Months)</option>
                                                <option value="Diploma (6 Months)">Diploma (6 Months)</option>
                                                <option value="Online Classes">Online Classes</option>
                                            </select>
                                        </span>
                                    </div>
                                </div>

                                <!-- Start Date -->
                                <div class="contact-inner">
                                    <input name="start_date" type="date" placeholder="Preferred Start Date">
                                </div>

                                <!-- Submit -->
                                <div class="comment-submit-btn text-center">
                                    <button class="ht-btn ht-btn-md w-100" type="submit">Submit Application</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <!--============ Early Bird Offer ============-->
    <div class="section-space--ptb_70 bg-light text-center">
        @Html.Raw(Model.ContentTypeSlug?.ShortDescription)

    </div>
    <div class="about-banner-wrap banner-space about-us-bg position-relative"
    style="background: url(/assets/images/gallery/students-ilm-academy_07.jpeg) no-repeat center; background-size: cover;">
        <div class="slider-mask-2"></div>
        <div class="container pb-4 pt-lg-5 pt-3">
            <div class="row">
                <div class="col-lg-11 m-auto">
                    <div class="about-banner-content text-center">
                        <h2 class="mb-1 text-white">Our Programs</h2>
                        <h1 class="text-white mb-4">Flexible Learning Options for Every Student</h1>

                        <div class="text-white row g-4 text-start">
                            <div class="col-lg-6">
                                <div class="list-two-inner h-100">
                                    <h4 class="text-white mb-3">On-Campus Programs</h4>
                                    @foreach (var i in Model.ContentData?.ChildContent)
                                    {
                                        <div class="list-two-inner">
                                            <h5>@i.Title</h5>
                                        @i.ShortDescription
                                    </div>
                                    }
                                    
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="list-two-inner h-100">
                                    <h4 class="text-white mb-3">Online Programs</h4>
                                    @foreach (var i in Model.MiscData?.ChildContent)
                                    {
                                        <div class="list-two-inner">
                                            <h5>@i.Title</h5>
                                            @i.ShortDescription
                                        </div>
                                    }
                                   
                                </div>
                            </div>
                        </div> <!-- end row -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--============ Accommodation & Safety ============-->
    <div class="section-space--ptb_70 bg-light">
        <div class="our-experience-wrapper">
            <div class="container">
                <div class="row align-items-center mt-lg-5 mt-4">
                    <div class="col-lg-12 m-auto mt-30">
                        <div class="section-title-wrap text-center section-space--mb_30">
                            <h3 class="heading">
                                <span class="text-body fw-bold">Accommodation, Food & Safety</span>
                            </h3>
                        </div>
                        <div class="machine-learning-about-content mt-4 bg-white p-lg-5 p-4 rounded">
                            <div class="section-title mb-20">
                                <ul class="list-style-one dec-text">
                                    <li><b>Safe housing near campus:</b> Comfortable, secure accommodation options for all students.</li>
                                    <li><b>Halal & international cuisines:</b> Meals catering to MENA, Thai, Korean, and Indian dietary needs.</li>
                                    <li><b>Airport pickup & drop:</b> Transportation provided on arrival and departure.</li>
                                    <li><b>Female safety:</b> Female students are accompanied by a manager during transport.</li>
                                    <li><b>Student support:</b> Orientation and vibrant student life support nearby.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    

