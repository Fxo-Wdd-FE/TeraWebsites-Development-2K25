                        <h5 class="fw-semibold mb-2">
                            Related Articles
                        </h5>
                        <div class="">

                            <ul class="list-style-one">
                                @foreach(var res in Model.ContentTypeSlugs)
                                {
                                      <li>
                                   @res.ContentTitle
                                </li> 
                                }
                             
                              
                            </ul>

                        </div>


                    </div>
                    <div class=" mb-3
">
                        <img src="@PagesViewModel.ContentUrl/@Model.ContentTypeSlug?.PageHeaderPhoto" class="img-fluid rounded-3" />


